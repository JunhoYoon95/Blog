
<% @posts = Post.all%>
<% @posts.each do |post| %>
    <div class="card text-center">
        <div class="card-header">
            글 작성자 : <%=post.author%>
        </div>
        <div class="card-body">
        <h5 class="card-title"><%=post.title%> </h5>
        <p class="card-text"><%=post.content%> </p>
        <p>
            <%=post.post_type%>
        </p>
            <a href="#" class="btn btn-primary">Details</a>
        </div>
        <div class="card-footer text-muted">
            2 days ago
        </div>
    </div>
<% end %>